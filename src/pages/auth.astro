---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AuthForm from "@/components/AuthForm";
import { getAuthenticatedUser } from "@/lib/auth-guard";

export const prerender = false;

const auth = await getAuthenticatedUser(Astro.request);
if (auth) {
  return Astro.redirect("/dashboard", 302);
}
---

<BaseLayout title="Pulseo â€” Sign in" description="Sign in or create a Pulseo account.">
  <main class="auth-page">
    <!-- Background gradient orbs (matching landing page) -->
    <div class="auth-bg-orb auth-bg-orb-green" aria-hidden="true"></div>
    <div class="auth-bg-orb auth-bg-orb-orange" aria-hidden="true"></div>

    <div class="auth-container">
      <a href="/" class="auth-logo-link">
        <span class="auth-logo-text">Pulseo</span>
      </a>

      <AuthForm client:only="react" />
    </div>
  </main>
</BaseLayout>

<style>
  .auth-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: 2rem 1rem;
  }

  .auth-bg-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.15;
    pointer-events: none;
  }

  .auth-bg-orb-green {
    width: 400px;
    height: 400px;
    background: var(--color-green-primary);
    top: -100px;
    right: -100px;
  }

  .auth-bg-orb-orange {
    width: 300px;
    height: 300px;
    background: var(--color-orange-primary);
    bottom: -50px;
    left: -50px;
  }

  .auth-container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 480px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .auth-logo-link {
    text-decoration: none;
  }

  .auth-logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, var(--color-green-primary), var(--color-orange-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>

<style is:global>
  /* AuthForm component styles (global for React island) */
  .auth-card {
    width: 100%;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 0 40px rgba(0, 214, 126, 0.05);
  }

  .auth-tabs {
    display: flex;
    gap: 0;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.12);
  }

  .auth-tab {
    flex: 1;
    padding: 0.75rem 1rem;
    background: none;
    border: none;
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: color 0.2s ease;
    border-bottom: 2px solid transparent;
    margin-bottom: -1px;
  }

  .auth-tab:hover {
    color: var(--color-text-primary);
  }

  .auth-tab-active {
    color: var(--color-green-primary);
    border-bottom-color: var(--color-green-primary);
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .auth-field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .auth-label {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-text-secondary);
  }

  .auth-input {
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 8px;
    color: var(--color-text-primary);
    font-size: 0.95rem;
    font-family: var(--font-sans);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    outline: none;
  }

  .auth-input::placeholder {
    color: rgba(138, 138, 154, 0.6);
  }

  .auth-input:focus {
    border-color: var(--color-green-primary);
    box-shadow: 0 0 0 3px rgba(0, 214, 126, 0.15);
  }

  .auth-field-error {
    font-size: 0.8rem;
    color: #f97316;
  }

  .auth-error-banner {
    padding: 0.75rem 1rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 8px;
    color: #ef4444;
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
  }

  .auth-submit {
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, rgba(0, 214, 126, 0.3), rgba(0, 214, 126, 0.15));
    border: 1px solid rgba(0, 214, 126, 0.3);
    border-radius: 8px;
    color: var(--color-green-primary);
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease, box-shadow 0.2s ease, opacity 0.2s ease;
    font-family: var(--font-sans);
  }

  .auth-submit:hover:not(:disabled) {
    background: linear-gradient(135deg, rgba(0, 214, 126, 0.4), rgba(0, 214, 126, 0.2));
    box-shadow: 0 0 20px rgba(0, 214, 126, 0.2);
  }

  .auth-submit:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .auth-switch {
    text-align: center;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin-top: 0.5rem;
  }

  .auth-switch-link {
    background: none;
    border: none;
    color: var(--color-green-primary);
    cursor: pointer;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    font-family: var(--font-sans);
  }

  .auth-switch-link:hover {
    text-decoration: underline;
  }

  .auth-strength {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }

  .auth-strength-bar {
    flex: 1;
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    overflow: hidden;
  }

  .auth-strength-fill {
    height: 100%;
    border-radius: 2px;
    transition: width 0.3s ease, background-color 0.3s ease;
  }

  .auth-strength-label {
    font-size: 0.75rem;
    font-weight: 500;
    min-width: 80px;
    text-align: right;
  }
</style>
