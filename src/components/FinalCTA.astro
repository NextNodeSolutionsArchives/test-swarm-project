<section id="cta" class="relative py-[var(--spacing-section-desktop)] max-md:py-[var(--spacing-section-mobile)] overflow-hidden">
  <!-- Background orbs (callback to hero) -->
  <div class="cta-orbs" aria-hidden="true">
    <div class="cta-orb cta-orb-green"></div>
    <div class="cta-orb cta-orb-orange"></div>
  </div>

  <div class="container-content relative z-10 text-center">
    <h2 class="text-display mb-8" data-cta-reveal>
      Ready to find your flow?
    </h2>

    <div data-cta-reveal>
      <a href="/dashboard" class="cta-button-lg" data-cursor-hover>
        Go to Dashboard
        <span aria-hidden="true">&rarr;</span>
      </a>
    </div>

    <p class="text-sm text-text-secondary mt-6" data-cta-reveal>
      Free for individuals. Team plans from $12/mo.
    </p>
  </div>
</section>

<style>
  .cta-orbs {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .cta-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
  }

  .cta-orb-green {
    width: 500px;
    height: 500px;
    background: #00D67E;
    top: -20%;
    left: 10%;
    opacity: 0.15;
  }

  .cta-orb-orange {
    width: 400px;
    height: 400px;
    background: #FF6B35;
    bottom: -20%;
    right: 10%;
    opacity: 0.12;
  }

  .cta-button-lg {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1.125rem 3rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-dark-base);
    background: var(--color-green-primary);
    border-radius: 12px;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 0 40px rgba(0, 214, 126, 0.3);
  }

  .cta-button-lg:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 60px rgba(0, 214, 126, 0.5);
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;

  if (!prefersReducedMotion) {
    gsap.from("[data-cta-reveal]", {
      scrollTrigger: {
        trigger: "#cta",
        start: "top 70%",
      },
      opacity: 0,
      y: 30,
      stagger: 0.15,
      duration: 0.8,
      ease: "power3.out",
    });

    // Parallax orbs on scroll
    gsap.to(".cta-orb-green", {
      scrollTrigger: {
        trigger: "#cta",
        start: "top bottom",
        end: "bottom top",
        scrub: 1,
      },
      y: -60,
      ease: "none",
    });

    gsap.to(".cta-orb-orange", {
      scrollTrigger: {
        trigger: "#cta",
        start: "top bottom",
        end: "bottom top",
        scrub: 1,
      },
      y: 60,
      ease: "none",
    });
  }
</script>
